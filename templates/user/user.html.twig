{% extends 'base.html.twig' %}

{% block content %}

    {% block title %}Edit my account{% endblock %}

    {% block body %}

        {{ form_start(form) }}

        <div class="row mb-2">
            <div class="col">
                {{ form_row(form.name) }}
            </div>
        </div>

        <div class="row mb-2">
            <div class="col">
                {{ form_row(form.surname) }}
            </div>
        </div>


        <div class="col-sm-4 mb-5">
            <img style="width: 100%; height: 400px" class="mb-2"
                 src="{{ asset("assets/uploads/avatars/" ~ user.imageUrl) }}"
                 alt="Card image trick">
        </div>

        <div class="row mb-2">
            <div class="col">
                {{ form_row(form.imageUrl) }}
            </div>
        </div>

        <button type="submit" class="btn btn-outline-info">Update my info</button>

        {{ form_end(form) }}


    {% endblock %}

{% endblock %}
