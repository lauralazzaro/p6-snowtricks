{% extends 'base.html.twig' %}

{% block content %}

<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-5">
            Welcome {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <div class="row mb-5">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
        </div>
    </div>

    <div class="row mb-5">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <label for="email">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="email" class="form-control  mb-2" autocomplete="email" required autofocus>
        </div>
    </div>

    <div class="row mb-5">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <label for="password">Password</label>
            <input type="password" name="password" id="password" class="form-control  mb-2" autocomplete="current-password" required>
        </div>
    </div>

    <div class="row mb-5">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <button class="btn btn-lg btn-primary" type="submit">
                Sign in
            </button>
        </div>
    </div>



    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
</form>
{% endblock %}
