

{% block header %}

{% if trick.image[0] is defined %}
{% set img = asset("assets/uploads/images/" ~ trick.image[0].imageUrl)%}
{% else %}
{% set img = asset("assets/img/trick.jpg") %}
{% endif %}

<header class="masthead"
        style="background: url({{ img }}); background-size: 100% 100%; height: 600px">
    <div class="container">
       {% if app.request.attributes.get('_route') == 'app_trick_edit' and trick.image[0] is defined %}
       <div class="row justify-content-end">
            <div class="col-sm-2 justify-content-center" style="background-color: #FFFFFF; z-index: 1000">
                <a href="{{ path('app_image_edit', {'id': trick.image[0].id }) }}"><i class="fa-solid fa-pen"></i></a>
                <a href="{{ path('app_image_delete', {'id': trick.image[0].id }) }}" onclick="return confirm('Are you sure you want to delete this image?');"><i class="fa-solid fa-trash-can"></i></a>
            </div>
        </div>
        {% endif %}
    </div>

    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="site-heading">
                    <h1>{{ trick.name }}</h1>
                </div>
            </div>
        </div>
    </div>
</header>
{% endblock %}

{% block content %}
{{ form_start(form) }}
    <div class="row mb-2">
        <div class="col">
            {{ form_row(form.name) }}
        </div>
    </div>

    <div class="row mb-2">
        <div class="col">
            {{ form_row(form.description) }}
        </div>
    </div>

    <div class="row mb-2">
        <div class="col">
            {{ form_row(form.category) }}
        </div>
    </div>

    <div class="row mb-2">
        <div class="col-sm-6">
            <div class="row">
                {% for image in trick.image %}

                <div class="col-sm-4 mb-2">
                    <div class="row">
                         <img style="width: 100%; height: 150px"
                             src="{{ asset("assets/uploads/images/" ~ image.imageUrl) }}"
                             alt="Card image trick">
                    </div>
                    <a href="{{ path('app_image_edit', {'id': image.id }) }}"><i class="fa-solid fa-pen"></i></a>
                    <a href="{{ path('app_image_delete', {'id': image.id }) }}" onclick="return confirm('Are you sure you want to delete this image?');"><i class="fa-solid fa-trash-can"></i></a>
                </div>

                {% endfor %}
            </div>
        </div>

        <div class="col-sm-6">
            <div class="row">
                {% for video in trick.video %}
                <div class="col-sm-4 mb-2">
                    <div class="row">
                         <div class="embed-responsive embed-responsive-4by3">
                            <iframe width="100%" class="embed-responsive-item" src="{{ video.videoUrl }}"
                                    title="YouTube video player"
                                    allowfullscreen>

                            </iframe>
                        </div>
                    </div>
                    <a href="{{ path('app_video_edit', {'id': video.id }) }}"><i class="fa-solid fa-pen"></i></a>
                    <a href="{{ path('app_video_delete', {'id': video.id }) }}" onclick="return confirm('Are you sure you want to delete this video?');"><i class="fa-solid fa-trash-can"></i></a>

                </div>

                {% endfor %}
            </div>
        </div>

    </div>
    <p>Add images: </p>
    {{ form_row(form.image, { 'attr': {'class': 'custom-file-input'} }) }}

    <p>Add videos (Youtube)</p>
    <ul id="email-fields-list"
        data-prototype="{{ form_widget(form.video.vars.prototype)|e }}"
        data-widget-tags="{{ '<li></li>'|e }}"
        data-widget-counter="{{ form.video|length }}">
        
        {% for videoUrl in form.video %}
            <li>
                {{ form_widget(videoUrl) }}
            </li>
        {% endfor %}
    </ul>


    <button type="button"
            class="add-another-collection-widget"
            data-list-selector="#email-fields-list">Add a video</button>

    <script src="{{ asset('assets/js/jquery.js') }}"></script>

    <script src="{{ asset('assets/js/add-collection-widget.js') }}"></script>

    <div class="row mt-3 mb-3">
        <div class="col-sm-2">
            <button class="btn btn-primary">{{ button_label|default('Create Trick') }}</button>

        </div>
    </div>


{{ form_end(form) }}
{% endblock %}